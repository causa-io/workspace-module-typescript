{
  "name": "@causa/workspace-typescript",
  "version": "0.1.0",
  "description": "The Causa workspace module providing functionalities for projects coded in TypeScript.",
  "repository": "github:causa-io/workspace-module-typescript",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 src/**/assets/**/* dist/",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings=ExperimentalWarning\" jest",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@causa/workspace": ">= 0.7.0 < 1.0.0",
    "@causa/workspace-core": "^0.4.0",
    "js-yaml": "^4.1.0",
    "json-schema-to-typescript": "^13.0.1",
    "lodash-es": "^4.17.21",
    "prettier": "^2.8.8",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^2.0.1",
    "@types/jest": "^29.5.1",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.16.14",
    "@types/uuid": "^9.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
