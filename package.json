{
  "name": "@causa/workspace-typescript",
  "version": "0.8.2",
  "description": "The Causa workspace module providing functionalities for projects coded in TypeScript.",
  "repository": "github:causa-io/workspace-module-typescript",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 src/**/assets/**/* dist/",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings=ExperimentalWarning\" jest",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@causa/workspace": ">= 0.13.0 < 1.0.0",
    "@causa/workspace-core": ">= 0.20.0 < 1.0.0",
    "archiver": "^7.0.1",
    "audit-ci": "^6.6.1",
    "js-yaml": "^4.1.0",
    "json-schema-to-typescript": "^14.0.4",
    "lodash-es": "^4.17.21",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.2.5",
    "quicktype-core": "^23.0.168",
    "semver": "^7.6.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/archiver": "^6.0.2",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.33",
    "@types/semver": "^7.5.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "node-stream-zip": "^1.15.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
