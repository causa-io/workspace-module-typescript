{
  "name": "@causa/workspace-typescript",
  "version": "0.14.0",
  "description": "The Causa workspace module providing functionalities for projects coded in TypeScript.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/causa-io/workspace-module-typescript.git"
  },
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 src/**/assets/**/* dist/",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings=ExperimentalWarning\" jest",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@causa/workspace": ">= 0.18.1 < 1.0.0",
    "@causa/workspace-core": ">= 0.24.1 < 1.0.0",
    "archiver": "^7.0.1",
    "audit-ci": "^7.1.0",
    "class-validator": "^0.14.2",
    "js-yaml": "^4.1.0",
    "micromatch": "^4.0.8",
    "npm-check-updates": "^19.1.1",
    "pino": "^10.1.0",
    "prettier": "^3.6.2",
    "quicktype-core": "^23.2.6",
    "semver": "^7.7.3",
    "tar": "^7.5.1"
  },
  "devDependencies": {
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@tsconfig/node22": "^22.0.2",
    "@types/archiver": "^6.0.3",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.18.11",
    "@types/semver": "^7.7.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-extended": "^6.0.0",
    "node-stream-zip": "^1.15.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
