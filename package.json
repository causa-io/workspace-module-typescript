{
  "name": "@causa/workspace-typescript",
  "version": "0.10.2",
  "description": "The Causa workspace module providing functionalities for projects coded in TypeScript.",
  "repository": "github:causa-io/workspace-module-typescript",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 src/**/assets/**/* dist/",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings=ExperimentalWarning\" jest",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@causa/workspace": ">= 0.16.1 < 1.0.0",
    "@causa/workspace-core": ">= 0.22.3 < 1.0.0",
    "archiver": "^7.0.1",
    "audit-ci": "^7.1.0",
    "js-yaml": "^4.1.0",
    "json-schema-to-typescript": "^15.0.4",
    "lodash-es": "^4.17.21",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.5.3",
    "quicktype-core": "^23.1.4",
    "semver": "^7.7.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@swc/core": "^1.11.24",
    "@swc/jest": "^0.2.38",
    "@tsconfig/node22": "^22.0.1",
    "@types/archiver": "^6.0.3",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.17",
    "@types/semver": "^7.7.0",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "node-stream-zip": "^1.15.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  }
}
