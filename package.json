{
  "name": "@causa/workspace-typescript",
  "version": "0.17.0",
  "description": "The Causa workspace module providing functionalities for projects coded in TypeScript.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/causa-io/workspace-module-typescript.git"
  },
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./code-generation": "./dist/code-generation/index.js",
    "./services": "./dist/services/index.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 src/**/assets/**/* dist/ && node transform-schemas.mjs",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings=ExperimentalWarning\" jest",
    "test:cov": "npm run test -- --coverage",
    "typecheck": "tsc --noEmit",
    "generateConfigurationSchemas": "cs model genCode && perl -pi -e 's|\\@causa/runtime|\\@causa/workspace/validation|g' src/configurations/generated.ts"
  },
  "dependencies": {
    "@causa/workspace": ">= 0.22.1 < 1.0.0",
    "@causa/workspace-core": ">= 0.27.0-rc.2 < 1.0.0",
    "archiver": "^7.0.1",
    "audit-ci": "^7.1.0",
    "class-validator": "^0.14.3",
    "js-yaml": "^4.1.1",
    "micromatch": "^4.0.8",
    "npm-check-updates": "^19.3.2",
    "pino": "^10.3.1",
    "prettier": "^3.8.1",
    "quicktype-core": "^23.2.6",
    "semver": "^7.7.4",
    "globby": "^16.1.0",
    "tar": "^7.5.7"
  },
  "devDependencies": {
    "@scalar/openapi-types": "^0.5.3",
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@tsconfig/node22": "^22.0.5",
    "@types/archiver": "^7.0.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^22.19.10",
    "@types/semver": "^7.7.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "node-stream-zip": "^1.15.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
